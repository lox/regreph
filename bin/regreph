#!/usr/bin/env php
<?php

// Read Console component tutorial at
// http://symfony.com/doc/current/components/console/introduction.html

// Composer autoloader
require __DIR__.'/../vendor/autoload.php';

// Use needed classes and commands to load into the Regreph console application
use Symfony\Component\Console\Application;
use Regreph\Console\Command\RegrephCommand;
use Regreph\Console\Command\BenchCommand;

// Create a new Console Application instance
$application = new Application();

// Attach commands to the Console Application instance
$application->add(new RegrephCommand);
$application->add(new BenchCommand);

// Run the Console Application instance
$application->run();
